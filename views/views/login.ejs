<!-- 头部 -->
<%- include("../layout/header.ejs",{
    hideNav:true
}) %>
    <style>
        .body {
            width: 100%;
            height: 100vh;
            background-image: url("/img/bg1.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            overflow: hidden;
            margin: 0;
        }

        .container-fluid {
            padding: 0;
        }

        .content {
            background-color: #fff;
            margin: 0 auto;
            max-width: 800px;
            border-radius: 10px;
        }
        .login {
            width: 350px;
        }
        @media (max-width:576px) {
            .login{
                width: 100%;
                min-width: 300px;
            }
        }
    </style>
    <div class="body row">
        <div class="col d-flex justify-content-center  align-self-center">
            <div class="d-flex border content mx-auto  p-md-5 p-4">
                <div class="flex-grow-1 d-sm-none d-none d-lg-block d-md-block">
                    <img style="width: 100%;" src="/img/login.png" alt="">
                </div>
                <div class="login d-flex  flex-sm-grow-1 flex-column">
                    <h1 class="h2 text-center">Hi! 欢迎登录</h1>
                    <form action="" class="mt-2">
                        <div class="form-group">
                            <label for="user">账号</label>
                            <input type="text" id="text" class="form-control is-invalid"  placeholder="输入账号" />
                            <div class="invalid-feedback">
                                失败
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">密码</label>
                            <input type="password" id="password" class="form-control is-valid" placeholder="输入密码" />
                            <div class="valid-feedback">
                               验证成功
                              </div>
                            <div class="d-flex mt-1 flex-row-reverse">
                                <a href="/register" class="text-primary"> <small>立即注册</small> </a> 
                             </div>
                        </div>
                      
                        <div class="form-group mt-4">
                           <button type="submit" class="btn btn-primary btn-block">登录</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
