<!-- 头部 -->
<%- include("../layout/header.ejs",{
    hideNav:true
}) %>
    <style>
        .body {
            width: 100%;
            height: 100vh;
            background-image: url("/img/bg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            overflow: hidden;
            margin: 0;
        }

        .container-fluid {
            padding: 0;
        }

        .content {
            background-color: #fff;
            margin: 0 auto;
            max-width: 800px;
            border-radius: 10px;
        }
        .login {
            width: 350px;
        }
        @media (max-width:576px) {
            .login{
                width: 100%;
                min-width: 300px;
            }
        }
    </style>
    <div class="body row">
        <div class="col d-flex justify-content-center  align-self-center">
            <div class="d-flex border content mx-auto  p-md-5 p-4">
                <div class="login d-flex  flex-sm-grow-1 flex-column">
                    <h1 class="h2 text-center">Hi! 欢迎注册</h1>
                    <form action="" class="mt-2">
                        <div class="form-group">
                            <strong class="text-danger">*</strong> <label for="user">账号</label>
                            <input type="text" id="text" class="form-control"  placeholder="输入账号" />
                        </div>
                       
                        <div class="form-group">
                            <strong class="text-danger">*</strong> <label for="password">密码</label>
                            <input type="password" id="password" class="form-control" placeholder="输入密码" />
                        </div>

                        <div class="form-group">
                            <strong class="text-danger">*</strong> <label for="password1">确认</label>密码</label>
                            <input type="password" id="password1" class="form-control" placeholder="输入密码" />
                        </div>

                        <div class="form-group">
                            <label for="user">性别</label>
                            <div class="d-flex justify-content-between">
                                <div class="custom-control  custom-radio">
                                    <input type="radio" class="custom-control-input" id="gender0" name="example1" value="customEx">
                                    <label class="custom-control-label" for="gender0">女</label>
                                  </div>
                                  <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="gender1" name="example1" value="customEx">
                                    <label class="custom-control-label" for="gender1">男</label></label>
                                  </div>
                                  <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="gender2" name="example1" value="customEx">
                                    <label class="custom-control-label" for="gender2">保密</label>
                                  </div>
                            </div>
                        </div>
                        <hr/>
                        <div class="d-flex flex-row-reverse">
                            <a href="/login" class="text-primary"><small>返回登录</small> </a> 
                         </div>
                        <div class=" mt-3">
                           <button type="submit" class="btn btn-primary btn-block">确 认</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include("../layout/footer.ejs") %>